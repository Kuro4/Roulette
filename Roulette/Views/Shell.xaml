<Window x:Class="Roulette.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:ViewModels="clr-namespace:Roulette.ViewModels"
        xmlns:local="clr-namespace:Roulette.Views"
        mc:Ignorable="d"
        Title="Shell" Height="300" Width="300"
        d:DataContext="{d:DesignInstance {x:Type ViewModels:ShellViewModel},IsDesignTimeCreatable=True}">
    <Grid>
        <Label Content="{Binding Result}" HorizontalAlignment="Left" Margin="125,92,0,0" VerticalAlignment="Top"/>
        <Button Content="Spin" HorizontalAlignment="Left" Margin="60,183,0,0" VerticalAlignment="Top" Width="75" Command="{Binding SpinRoulette1}"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="180,183,0,0" VerticalAlignment="Top" Width="75" Command="{Binding StopRoulette1}"/>
        <DataGrid Margin="0,0,232,10" ItemsSource="{Binding Data1}">
            
        </DataGrid>
    </Grid>
</Window>
